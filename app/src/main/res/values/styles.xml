<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles -->
    <style name="AppButton">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">@dimen/button_letter_spacing</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:background">@drawable/ask_button_selector</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:shadowRadius">@dimen/shadow_layer_radius</item>
        <item name="android:shadowDx">@dimen/shadow_layer_dx</item>
        <item name="android:shadowDy">@dimen/shadow_layer_dy</item>
        <item name="android:shadowColor">@color/button_text_shadow</item>
    </style>

    <style name="AskButton" parent="AppButton">
        <item name="android:textSize">@dimen/ask_button_text_size</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/ask_button_bottom_margin</item>
        <item name="android:contentDescription">Ask again button - tap to record your voice and ask a question</item>
    </style>

    <style name="AutoPlayButton" parent="AppButton">
        <item name="android:textSize">@dimen/autoplay_button_text_size</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/autoplay_button_bottom_margin</item>
        <item name="android:contentDescription">AutoPlay button - tap to start or stop automatic cycling through items</item>
    </style>

    <style name="SuggestionButton">
        <item name="android:textSize">@dimen/suggestion_button_text_size</item>
        <item name="android:elevation">@dimen/suggestion_button_elevation</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">@dimen/suggestion_button_letter_spacing</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:layout_margin">@dimen/suggestion_button_margin</item>
        <item name="android:importantForAccessibility">yes</item>
    </style>

    <!-- Text styles -->
    <style name="ListeningIndicator">
        <item name="android:textSize">@dimen/listening_indicator_text_size</item>
        <item name="android:textColor">#4CAF50</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/listening_indicator_top_margin</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ErrorText">
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/error_text_top_margin</item>
    </style>

    <style name="AutoPlayStatusText">
        <item name="android:textSize">@dimen/autoplay_status_text_size</item>
        <item name="android:textColor">#FF6B6B</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/autoplay_status_bottom_margin</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- ImageView styles -->
    <style name="LogoImageView">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginTop">@dimen/logo_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:contentDescription">What Is app logo</item>
        <item name="android:importantForAccessibility">yes</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- GridLayout style -->
    <style name="SuggestionsGrid">
        <item name="android:columnCount">3</item>
        <item name="android:rowCount">4</item>
        <item name="android:layout_marginTop">@dimen/suggestions_grid_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/suggestions_grid_bottom_margin</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>