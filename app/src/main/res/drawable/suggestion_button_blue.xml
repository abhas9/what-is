<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/suggestion_bright_blue_pressed" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="@color/suggestion_bright_blue_pressed" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/suggestion_bright_blue" />
            <corners android:radius="12dp" />
            <stroke
                android:width="3dp"
                android:color="@color/suggestion_text_white" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/suggestion_bright_blue" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="@color/suggestion_bright_blue" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
    
</selector>